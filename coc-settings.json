{
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "graphql", "html", "yaml",  "json", "typescript", "typescriptreact", "javascriptreact", "go"], 
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  "list.source.symbols.defaultOptions": [
    "--interactive"
  ],
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.autoFixOnSave": true,
  "tslint.enable": true,
  "tslint.autoFixOnSave": true,
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.enable": true,
  "diagnostic.enableHighlightLineNumber": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  "git.blameUseRealTime": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "prettier.requireConfig": true,
  "prettier.printWidth": 120,
  "prettier.tabWidth": 4,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.endOfLine": "lf",
}

